<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Job Board" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag params[:controller] %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div class="header">
        <div class="row">
          <div class="nine columns header-container">
            <h2><%= link_to "Job Board", root_path %></h2>
          </div>
          <div class="three columns header-account">
            <ul class="hmenu">
              <%= render 'devise/menu/registration_items' %>
              <%= render 'devise/menu/login_items' %>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="twelve columns">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert-box" %>
          <% end %>
        </div>
      </div>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>