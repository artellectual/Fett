<div class="row">
  <div class="twelve columns">
    <hr>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <h4>Forgot your password?</h4>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "new_user nice" }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "input-text" %>

      <%= f.submit "Send me reset password instructions", class: "medium button radius" %>
    <% end %>

    <%= render :partial => "devise/shared/links" %>
  </div>
</div>