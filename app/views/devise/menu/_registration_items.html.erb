<nav class="right">
  <ul>
<% if user_signed_in? %>
    <li>
      <%= link_to edit_user_registration_path, :class => "user" do %>
        <% if current_user.image_url.nil? %>
        <%= image_tag "avatar/guest_avatar.gif" %>
        <% else %>
        <%= image_tag current_user.image_url(:thumb).to_s %>
        <% end %>
        <%= current_user.email %>
      <% end %>
    </li>
    <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
<% else %>
    <li><%= link_to 'Register', new_user_registration_path, :class => "user" %></li>
    <li><%= link_to 'Login', new_user_session_path %></li>
<% end %>
  </ul>
</nav>